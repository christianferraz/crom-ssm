{
  "name": "crom-ssm",
  "version": "1.0.0",
  "description": "Simple Server Manager application built with Electron.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "build:renderer": "webpack --config webpack.config.js",
    "dist": "npm run build:renderer && electron-builder",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "ssh",
    "sftp",
    "server-manager"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chart.js": "^4.4.2",
    "keytar": "^7.9.0",
    "monaco-editor": "^0.47.0",
    "ssh2": "^1.15.0",
    "sweetalert2": "^11.10.8",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "css-loader": "^7.1.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "live.crom.ssm",
    "productName": "Crom-SSM",
    "copyright": "Copyright Â© 2025 Crom.live",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/",
      "category": "Development"
    }
  }
}